<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="baseFont" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="mainActivity">
        <item name="android:paddingHorizontal">@dimen/main_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/main_padding_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/btn_padding_bottom</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconTint">@color/blackish_blue</item>
        <item name="cornerRadius">@dimen/btn_border_radios</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">700</item>
        <!-- Стиль тени -->
<!--        <item name="android:outlineSpotShadowColor">@color/black</item>-->
    </style>

    <style name="titleActivity" parent="baseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_icon_navigation</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="imageInTitleActivity">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

    <style name="switchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">?attr/thumbColor</item>
        <item name="trackTint">?attr/trackColor</item>
    </style>

    <style name="itemMenuSetting" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingVertical">@dimen/menu_padding_vertical</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="iconSearch">
        <item name="android:layout_width">@dimen/search_icon_size</item>
        <item name="android:layout_height">@dimen/search_icon_size</item>
        <item name="android:tint">?attr/editTextIconColor</item>
    </style>

    <style name="editTextSearch" parent="baseFont">
        <item name="android:paddingHorizontal">@dimen/search_edit_padding_horizontal</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">?attr/editTextIconColor</item>
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>

    <style name="titleTrackStyle" parent="baseFont">
        <item name="android:textColor">?attr/titleTrackColor</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="infoTrackStyle" parent="titleTrackStyle">
        <item name="android:textColor">?attr/infoTrackColor</item>
        <item name="android:textSize">@dimen/track_font_size</item>
    </style>
</resources>