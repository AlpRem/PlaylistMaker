<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="baseFont" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="mainActivity">
        <item name="android:paddingHorizontal">@dimen/main_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/main_padding_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/btn_padding_bottom</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconTint">@color/blackish_blue</item>
        <item name="cornerRadius">@dimen/btn_border_radios</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">700</item>
        <!-- Стиль тени -->
<!--        <item name="android:outlineSpotShadowColor">@color/black</item>-->
    </style>

    <style name="titleActivity" parent="baseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_icon_navigation</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="titlePlaylistActivity" parent="titleActivity">
        <item name="android:layout_marginStart">@dimen/margin_icon_navigation_playlist</item>
    </style>

    <style name="titleHistorySearch" parent="titleActivity">
        <item name="android:layout_marginStart">@dimen/size_null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginVertical">@dimen/search_margin_vertical</item>
        <item name="android:paddingTop">@dimen/padding_top_title_search</item>
        <item name="android:paddingBottom">@dimen/search_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/font_size_title_history</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="imageInTitleActivity">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

    <style name="switchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">?attr/thumbColor</item>
        <item name="trackTint">?attr/trackColor</item>
    </style>

    <style name="itemMenuSetting" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingVertical">@dimen/menu_padding_vertical</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="iconSearch">
        <item name="android:layout_width">@dimen/search_icon_size</item>
        <item name="android:layout_height">@dimen/search_icon_size</item>
        <item name="android:tint">?attr/editTextIconColor</item>
    </style>

    <style name="errorTrack">
        <item name="android:layout_marginTop">@dimen/margin_bottom_btn_playlist</item>
        <item name="android:layout_width">@dimen/icon_error</item>
        <item name="android:layout_height">@dimen/icon_error</item>
        <item name="android:layout_gravity">center|top</item>
    </style>

    <style name="editTextSearch" parent="baseFont">
        <item name="android:paddingHorizontal">@dimen/search_edit_padding_horizontal</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">?attr/editTextIconColor</item>
        <item name="android:textColor">@color/blackish_blue</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>

    <style name="titleTrackStyle" parent="baseFont">
        <item name="android:textColor">?attr/titleTrackColor</item>
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="infoTrackStyle" parent="titleTrackStyle">
        <item name="android:textColor">?attr/infoTrackColor</item>
        <item name="android:textSize">@dimen/track_font_size</item>
    </style>

    <style name="titleErrorStyle" parent="titleTrackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_error</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_size_error</item>
    </style>

    <style name="refreshBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_refresh</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">@dimen/vertical_refresh</item>
        <item name="android:paddingHorizontal">@dimen/horizontal_refresh</item>
        <item name="android:layout_marginTop">@dimen/margin_size_error</item>
        <item name="cornerRadius">@dimen/radius_refresh</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="cleanSearchHistoryBtn" parent="refreshBtn">
        <item name="android:layout_marginTop">@dimen/margin_top_clean_btn</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="errorLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_top_error</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="apTitle">
        <item name="android:layout_marginTop">@dimen/margin_top_trackName</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/titleTrackColor</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="apAuthor" parent="apTitle">
        <item name="android:layout_marginTop">@dimen/margin_top_author_audio_player</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorInformationValue</item>
    </style>

    <style name="apControlPanelPlay">
        <item name ="android:layout_width">@dimen/size_control_panel_play</item>
        <item name ="android:layout_height">@dimen/size_control_panel_play</item>
        <item name ="android:layout_marginTop">@dimen/margin_top_control_panel</item>
        <item name = "android:scaleType">centerCrop</item>
    </style>

    <style name="apTime">
        <item name="android:layout_marginTop">@dimen/margin_top_time_audio_player</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_time_audio_player</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="apInformation">
        <item name="android:layout_marginTop">@dimen/margin_top_information_audio_player</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_information_audio_player</item>
        <item name="android:textSize">@dimen/font_size_information</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="apInformationTitle" parent="apInformation" >
        <item name="android:textColor">@color/ap_information_title</item>
    </style>

    <style name="apInformationValue" parent="apInformation" >
        <item name="android:textColor">?attr/colorInformationValue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="titleErrorLibraryStyle" parent="titleErrorStyle">
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginTop">@dimen/margin_size_error</item>
    </style>

    <style name="createPlaylistBtn" parent="refreshBtn">
        <item name="android:insetTop">@dimen/size_null</item>
        <item name="android:insetBottom">@dimen/size_null</item>
        <item name="android:layout_marginTop">@dimen/size_null</item>
        <item name="android:minHeight">@dimen/size_null</item>

        <item name="android:paddingVertical">@dimen/vertical_refresh</item>
        <item name="android:paddingHorizontal">@dimen/horizontal_refresh</item>

    </style>

    <style name="fragmentPlaylistLibrary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top_playlist</item>
    </style>

    <style name="fragmentFavoritesLibrary" parent="fragmentPlaylistLibrary">
        <item name="android:layout_marginTop">@dimen/margin_top_favorites</item>
    </style>

    <style name="tabLibrary" parent="baseFont">
        <item name="android:background">?attr/backgroundTab</item>
    </style>

    <style name="tabTextView" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">?attr/titleTrackColor</item>
    </style>

    <style name="playlist_edit_text">
        <item name="android:paddingTop">@dimen/padding_top_edit_text_playlist_add</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_edit_text_playlist_add</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal_edit_text_playlist_add</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/font_size_placeholder</item>
        <item name="android:textColor">?attr/colorNote</item>
    </style>

    <style name="playlist_btn" parent="playlist_edit_text">
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="playlist_edit_text_Layout">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">@dimen/width_image_rectangle</item>
        <item name="boxStrokeWidthFocused">@dimen/width_image_rectangle</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">?attr/borderPlaylistAdd</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_image_rectangle</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_image_rectangle</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_image_rectangle</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_image_rectangle</item>
    </style>

    <style name="playlist_text">
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorNote</item>
        <item name="android:textSize">@dimen/font_size_text_playlist</item>
    </style>

    <style name="titleAddToPlaylist">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/font_size_title_playlist</item>
        <item name="android:textColor">?attr/colorNote</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_title_add_to_playlist</item>
        <item name="android:paddingTop">@dimen/padding_top_line_bottom_sheet</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_line_bottom_sheet</item>
    </style>

    <style name="addToPlaylistBtn" parent="createPlaylistBtn">
        <item name="android:layout_marginTop">@dimen/btn_padding_bottom</item>
        <item name="android:layout_marginBottom">@dimen/padding_bottom_add_to_playlist_btn</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="playlist_name_in_bs">
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorNameInBS</item>
        <item name="android:textSize">@dimen/font_size_name_in_bs</item>
        <item name="android:layout_marginLeft">@dimen/margin_right_img_bottom_sheet</item>
    </style>

    <style name="playlist_count_track_in_bs">
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorNote</item>
        <item name="android:textSize">@dimen/font_size_count_track_in_bs</item>
        <item name="android:layout_marginLeft">@dimen/margin_right_img_bottom_sheet</item>
    </style>

    <style name="font_bold_playlist_detail">
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/font_size_bold_playlist_details</item>
        <item name="android:textColor">@color/color_text_playlist_details</item>
        <item name="android:layout_marginTop">@dimen/margin_top_name_playlist_details</item>
    </style>

    <style name="font_playlist_detail">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/font_size_playlist_details</item>
        <item name="android:textColor">@color/color_text_playlist_details</item>
    </style>

</resources>