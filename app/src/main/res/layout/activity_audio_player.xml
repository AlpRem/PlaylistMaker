<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.AudioPlayerActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/activity_audio_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.AudioPlayerActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_guide_begin_audio_player"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide_content_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_guide_content_audio_player"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_guide_content_audio_player"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/margin_guide_top_audio_player"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/margin_guide_bottom_audio_player"/>

    <ImageView
        android:id="@+id/arrow_back"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guide"
        style="@style/imageInTitleActivity"
         />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/size_null"
        android:layout_height="@dimen/size_null"
        android:layout_marginTop="@dimen/margin_top_cover"
        android:contentDescription="@string/content_description_audio_player"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toTopOf="@+id/top_guide"
         />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/cover"
        style="@style/apTitle"
         />

    <TextView
        android:id="@+id/trackAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        />

    <ImageView
        android:id="@+id/play"
        android:src="@drawable/play"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@+id/trackAuthor"
        style="@style/apControlPanelPlay"
        />

    <ImageView
        android:id="@+id/add"
        android:layout_width="@dimen/size_control_panel_btn"
        android:layout_height="@dimen/size_control_panel_btn"
        android:scaleType="fitStart"
        android:src="@drawable/add"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintBottom_toBottomOf="@id/play"
        />

    <ImageView
        android:id="@+id/like"
        android:layout_width="@dimen/size_control_panel_btn"
        android:layout_height="@dimen/size_control_panel_btn"
        android:scaleType="fitEnd"
        android:src="@drawable/like"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintBottom_toBottomOf="@id/play"
        />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@+id/play"
        style="@style/apTime"
        />

    <TextView
        android:id="@+id/track_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration_audio_player"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/timer"
        style="@style/apInformationTitle"
        />

    <TextView
        android:id="@+id/track_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/track_time_title"
        app:layout_constraintBottom_toBottomOf="@id/track_time_title"
        style="@style/apInformationValue"
        />

    <TextView
        android:id="@+id/collection_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/album_audio_player"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/track_time_title"
        style="@style/apInformationTitle"
        />

    <TextView
        android:id="@+id/collection_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/collection_name_title"
        app:layout_constraintBottom_toBottomOf="@id/collection_name_title"
        style="@style/apInformationValue"
        />

    <TextView
        android:id="@+id/release_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year_audio_player"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/collection_name_title"
        style="@style/apInformationTitle"
        />

    <TextView
        android:id="@+id/release_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/release_date_title"
        app:layout_constraintBottom_toBottomOf="@id/release_date_title"
        style="@style/apInformationValue"
        />

    <TextView
        android:id="@+id/primary_genre_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genre_audio_player"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/release_date_title"
        style="@style/apInformationTitle"
        />

    <TextView
        android:id="@+id/primary_genre_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/primary_genre_name_title"
        app:layout_constraintBottom_toBottomOf="@id/primary_genre_name_title"
        style="@style/apInformationValue"
        />

    <TextView
        android:id="@+id/country_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/country_audio_player"
        app:layout_constraintStart_toStartOf="@+id/left_guide_content_line"
        app:layout_constraintTop_toBottomOf="@id/primary_genre_name_title"
        style="@style/apInformationTitle"
        />

    <TextView
        android:id="@+id/country_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/country_title"
        app:layout_constraintBottom_toBottomOf="@id/country_title"
        style="@style/apInformationValue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>