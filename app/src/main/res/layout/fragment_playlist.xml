<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".library.ui.PlaylistFragment">

    <LinearLayout style="@style/fragmentPlaylistLibrary">

        <Button
            android:id="@+id/createPlaylistBtn"
            style="@style/createPlaylistBtn"
            android:text="@string/playlist_created" />

        <ImageView
            android:id="@+id/errorImageView"
            style="@style/errorTrack"
            android:src="@drawable/track_not_found" />

        <TextView
            android:id="@+id/errorTextView"
            style="@style/titleErrorLibraryStyle"
            android:text="@string/playlist_not_created" />

    </LinearLayout>

</FrameLayout>